\$TTL    604800
@       IN      SOA     {{dns_hostname}}. (
                        3         ; Serial
                        604800         ; Refresh
                        86400         ; Retry
                        2419200         ; Expire
                        604800 )       ; Negative Cache TTL
; name servers
    IN      NS      {{dns_hostname}}.

; PTR Records
{{ dns_ip.split(".")[-1] }} IN PTR {{dns_hostname}}.

{% for host in groups['bootstrap'] %}
{{ hostvars[host]['ansible_bond0']['ipv4']['address'].split(".")[-1] }} IN PTR {{ hostvars[host]['inventory_hostname'] }}.
{% endfor %}

