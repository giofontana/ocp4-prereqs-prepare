$TTL    604800
@       IN      SOA     {{dns_hostname}}. (
            3       ; Serial
            604800     ; Refresh
            86400     ; Retry
            2419200     ; Expire
            604800 )   ; Negative Cache TTL
;
; name servers - NS records
    IN      NS      {{dns_hostname}}.

; name servers - A records

{{dns_hostname}} IN A {{dns_ip}}

{% for host in groups['bootstrap'] %}
{{ hostvars[host]['inventory_hostname'] }} IN A {{ hostvars[host]['ansible_host'] }}
{% endfor %}

{% for host in groups['masters'] %}
{{ hostvars[host]['inventory_hostname'] }} IN A {{ hostvars[host]['ansible_host'] }}
{% endfor %}

{% for host in groups['workers'] %}
{{ hostvars[host]['inventory_hostname'] }} IN A {{ hostvars[host]['ansible_host'] }}
{% endfor %}

; OCP API A records
api IN A {{control_plane_lb_ip}}
api-int IN A {{control_plane_lb_ip}}

; OCP APPS Wildcard A records
*.apps IN A {{apps_lb_ip}}

; ETCD A records
{% for host in groups['masters'] %}
etcd-{{loop.index}} IN A {{ hostvars[host]['ansible_host'] }}
{% endfor %}

; The SRV records ...note the trailing dot at the end.
{% for host in groups['masters'] %}
_etcd-server-ssl._tcp IN SRV 0 10 2380 etcd-{{loop.index}}.ocp.rhbr-labs.com.
{% endfor %}

